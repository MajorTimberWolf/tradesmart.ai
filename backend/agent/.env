# LangChain Trading Agent Environment Configuration (Example)
# Copy to `.env` and replace with real values before running.

ENVIRONMENT=development
AGENT_VERSION=0.1.0

# Wallet / signing
WALLET__PRIVATE_KEY=0xyour_private_key
WALLET__ADDRESS=0xyour_agent_address
# WALLET__PASSPHRASE=super_secret_passphrase

# Network
NETWORK__CHAIN_ID=11155111
NETWORK__RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# NETWORK__WEBSOCKET_URL=wss://sepolia.infura.io/ws/v3/YOUR_INFURA_KEY
# NETWORK__EXPLORER_BASE_URL=https://sepolia.etherscan.io

# Contracts
CONTRACTS__IDENTITY_REGISTRY=
CONTRACTS__REPUTATION=
CONTRACTS__VALIDATION=
CONTRACTS__STRATEGY_REGISTRY=0xcEC24E7245039D3BBE0B7f6d3607849761F90D4B
CONTRACTS__BASE_AGENT=0x27620Bfea8B58Eaf3e103ee270dC2970fa14d072

# Pyth oracle
PYTH__ENDPOINT=https://hermes.pyth.network
# PYTH__API_KEY=pyth_api_key
PYTH__PRICE_FEED_IDS={"ETH_USD":"0xff61491a931112ddf1bd8147cd1b641375f79f5825126d665480874634fd0ace","BTC_USD":"0xca80ba6dc32e08d4bb1a82eaff2ac56ff877c3e8b66d0b178510f8d95d0dd2d0"}

# 1inch
# ONEINCH__API_BASE=https://api.1inch.dev/swap/v6.0
ONEINCH__API_KEY=your_1inch_api_key
ONEINCH__CHAIN=11155111

# x402 payments
X402__SERVICE_URL=https://api.x402.org/v1
X402__API_KEY=your_x402_api_key
X402__ASSET_SYMBOL=USDC
X402__PAYMENT_AMOUNT=0.10

# Persistence
PERSISTENCE__SQLITE_PATH=./backend/agent/data/agent_state.db
# PERSISTENCE__REDIS_URL=redis://localhost:6379/0

# Logging
LOGGING__CONFIG_PATH=./backend/agent/execution/logging.yaml
LOGGING__LOG_LEVEL=INFO

# Strategy defaults
STRATEGY__DEFAULT_STRATEGY=rsi
STRATEGY__MAX_PORTFOLIO_EXPOSURE=0.25
STRATEGY__STOP_LOSS_BPS=150
STRATEGY__TAKE_PROFIT_BPS=300
STRATEGY__MAX_SLIPPAGE_BPS=75
STRATEGY__RSI_LOOKBACK_PERIOD=14
STRATEGY__RSI_OVERBOUGHT=70
STRATEGY__RSI_OVERSOLD=30

# Operational intervals & retries
HEARTBEAT_INTERVAL_SECONDS=60
PRICE_POLL_INTERVAL_SECONDS=45
RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=5